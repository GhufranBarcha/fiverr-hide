{
  "manifest_version": 3,
  "name": "PrivacyLens Fiverr",
  "version": "1.0",
  "description": "Enhance privacy by masking financial information on Fiverr",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["*://*.fiverr.com/*"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "permissions": ["activeTab", "tabs", "scripting"],
  "host_permissions": ["*://*.fiverr.com/*"]
}
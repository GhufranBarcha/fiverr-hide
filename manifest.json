{
  "manifest_version": 3,
  "name": "Fiverr Balance Hider",
  "version": "1.0",
  "description": "Hides your Fiverr balance for privacy",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["*://*.fiverr.com/*"],
      "js": ["content.js"]
    }
  ],
  "permissions": ["activeTab"]
}
